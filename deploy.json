{
    "apps": [
        {
            "name": "mather",
            "script": "npm",
            "args" : "start",
            "instances": "2",
            "cwd" : "/app/",
            "exec_mode": "fork",
            "watch": true,
            "increment_var" : "PORT",
            "env": {
                "PORT": 3000,
                "NODE_ENV": "development"
            },
            "env_production": {
                "PORT": 3000,
                "NODE_ENV": "production",
            }
        }
    ]
  }